@model Driver

<div class="card">
    <div class="card-header">
        <h2 class="card-title display-3">Unassign @Model.FirstName @Model.LastName</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" disabled class="form-control" />
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" disabled class="form-control" />
                    <label asp-for="TaxiLicense" class="form-label"></label>
                    <input asp-for="TaxiLicense" disabled class="form-control" />
                    <label asp-for="Shift" class="form-label"></label>
                    <input asp-for="Shift" disabled class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="Car.Model" class="form-label"></label>
                    <input asp-for="Car.Model" disabled class="form-control" />
                    <label asp-for="Car.LicensePlate" class="form-label"></label>
                    <input asp-for="Car.LicensePlate" disabled class="form-control" />
                </div>
            </div>
            <div class="p-3">
                <button type="submit" class="btn btn-warning">Unassign driver</button>
                <a asp-controller="DriverUnassign" asp-action="Index" class="btn btn-secondary">Go back</a>
            </div>
        </form>
    </div>
</div>